import random

def saludo():
    """Solicita el nombre del usuario y lo saluda."""
    nombre = input("¿Cómo te llamas? ").strip()
    print(f"\n¡Hola, {nombre}! Bienvenido a este pequeño programa interactivo.")

def menu():
    """Muestra el menú de opciones y valida la entrada del usuario."""
    while True:
        print("\nMenú de opciones:")
        print("1. Generar un número aleatorio")
        print("2. Calcular la suma de dos números")
        print("3. Salir")
        opcion = input("Elige una opción (1/2/3): ").strip()

        if opcion in {"1", "2", "3"}:
            return opcion
        else:
            print("Opción no válida, intenta de nuevo.")

def numero_aleatorio():
    """Genera un número aleatorio dentro de un rango personalizado por el usuario."""
    try:
        min_rango = int(input("Ingrese el límite inferior: "))
        max_rango = int(input("Ingrese el límite superior: "))

        if min_rango >= max_rango:
            print("El límite inferior debe ser menor que el superior.")
        else:
            num = random.randint(min_rango, max_rango)
            print(f"Tu número aleatorio entre {min_rango} y {max_rango} es: {num}")
    except ValueError:
        print("Por favor, ingresa números enteros válidos.")

def suma():
    """Solicita dos números al usuario y muestra la suma."""
    def obtener_numero(mensaje):
        """Solicita un número al usuario y maneja posibles errores."""
        while True:
            try:
                return float(input(mensaje))
            except ValueError:
                print("Entrada no válida. Ingresa un número.")

    num1 = obtener_numero("Ingresa el primer número: ")
    num2 = obtener_numero("Ingresa el segundo número: ")
    print(f"La suma de {num1} y {num2} es: {num1 + num2}")

def main():
    """Función principal del programa."""
    saludo()
    while True:
        opcion = menu()
        if opcion == "1":
            numero_aleatorio()
        elif opcion == "2":
            suma()
        elif opcion == "3":
            print("¡Gracias por usar el programa! Hasta luego.")
            break

if __name__ == "__main__":
    main()
